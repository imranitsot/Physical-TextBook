{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/chat",
            "destination": "/api/index.py"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/index.py"
        },
        {
            "source": "/chat",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend-book/$1"
        }
    ],
    "builds": [
        {
            "src": "frontend-book/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ]
}